# Production Configuration (Docker)
PORT=3000
DOCS_DIR=/app/docs

# Reduce logs in production
LOG_LEVEL=warn

# Documentation Download (Optional)
# If set, documentation will be downloaded automatically on startup
# Leave empty to use volume-mounted docs (for backward compatibility)
DOCS_URL=
DOCS_DOWNLOAD_TIMEOUT=300000

# Monitoring (Production)
# Logs are sent directly to Loki, console is disabled
ENABLE_LOKI_PUSH=true
LOKI_URL=http://loki:3100

# Metrics are pushed to Pushgateway every 10 seconds
ENABLE_METRICS_PUSH=true
PUSHGATEWAY_URL=http://pushgateway:9091
METRICS_PUSH_INTERVAL=10000
